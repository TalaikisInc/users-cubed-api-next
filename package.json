{
  "name": "users-cubed-api-next",
  "version": "1.0.0",
  "description": "User management system/ CMS API on Lambda + S3.",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/",
    "upgrade:list": "ncu",
    "upgrade:install": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TalaikisInc/users-cubed-api-next.git"
  },
  "keywords": [
    "cms",
    "users"
  ],
  "author": "Tadas Talaikis <info@talaikis.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TalaikisInc/users-cubed-api-next/issues"
  },
  "homepage": "https://github.com/TalaikisInc/users-cubed-api-next#readme",
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "commitlint": "^8.2.0",
    "eslint": "^6.7.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-precommit-checks": "^3.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.2",
    "npm-check-updates": "^3.2.2",
    "serverless-dotenv-plugin": "^2.1.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@aws-amplify/auth": "^1.5.0",
    "@aws-amplify/core": "^1.2.4",
    "@aws-amplify/storage": "^1.2.4",
    "frenchkiss": "^0.2.1",
    "isemail": "^3.2.0",
    "lambda-api": "^0.10.4",
    "legit": "^1.0.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "git-precommit-checks",
      "git add"
    ]
  },
  "git-precommit-checks": {
    "rules": [
      {
        "filter": "\\.js$",
        "nonBlocking": "true",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "message": "You have unfinished work",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
