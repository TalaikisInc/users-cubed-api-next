{
  "name": "users-cubed-api-next",
  "version": "1.0.0",
  "description": "User management system/ CMS API on Lambda + S3.",
  "main": "index.js",
  "scripts": {
    "test": "mocha test/",
    "upgrade:list": "ncu",
    "upgrade:install": "ncu -u",
    "start": "serverless offline",
    "deploy": "serverless deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TalaikisInc/users-cubed-api-next.git"
  },
  "keywords": [
    "cms",
    "users"
  ],
  "author": "Tadas Talaikis <info@talaikis.com>",
  "license": "GPL-v3",
  "bugs": {
    "url": "https://github.com/TalaikisInc/users-cubed-api-next/issues"
  },
  "homepage": "https://github.com/TalaikisInc/users-cubed-api-next#readme",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "commitlint": "^8.2.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-precommit-checks": "^3.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "npm-check-updates": "^4.0.1",
    "serverless": "^1.60.0",
    "serverless-api-compression": "^1.0.1",
    "serverless-apigw-binary": "^0.4.4",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "^5.12.1",
    "serverless-plugin-aws-alerts": "^1.4.0",
    "serverless-plugin-log-retention": "^2.0.0",
    "simon": "^0.2.3",
    "supertest": "^4.0.2",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "auth0": "^2.20.0",
    "aws-sdk": "^2.593.0",
    "frenchkiss": "^0.2.1",
    "isemail": "^3.2.0",
    "legit": "^1.0.7",
    "protobufjs": "^6.8.8",
    "stripe": "^7.14.0",
    "xss-filters": "^1.2.7",
    "yup": "^0.28.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": [
      "git-precommit-checks",
      "git add"
    ]
  },
  "git-precommit-checks": {
    "rules": [
      {
        "filter": "\\.js$",
        "nonBlocking": "true",
        "message": "You’ve got leftover `console.log`",
        "regex": "console\\.log"
      },
      {
        "message": "You’ve got leftover conflict markers",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "message": "You have unfinished work",
        "nonBlocking": "true",
        "regex": "(?:FIXME|TODO)"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
